{% extends 'ThemeBundle:Default:base.html.twig' %}
{% block contenido %}
{{parent()}}
<h1>Confirmar Postulaci√≥n</h1>
<form class="form-horizontal" action="{{ path('solicitud_confirmar_postulacion', { 'id': entity.id }) }}" method="post">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title"><i><span class="glyphicon glyphicon-list-alt"></span></i> Datos de Solicitud</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover ">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Fecha desde</th>
                        <td>{{ entity.fechaDesde|date('d-m-Y') }}</td>
                    </tr>
                    <tr>
                        <th>Fecha hasta</th>
                        <td>{{ entity.fechaHasta|date('d-m-Y') }}</td>
                    </tr>
                    <tr>
                        <th>Perfil Postulante</th>
                        <td>{{ entity.perfilPostulante }}</td>
                    </tr>
                    <tr>
                        <th>Conocimientos Requeridos</th>
                        <td>{{ entity.conocRequeridos }}</td>
                    </tr>
                    <tr>
                        <th>Nivel Carrera</th>
                        <td>{{ entity.nivelCarreraCandidato }}</td>
                    </tr>        
                </tbody>
            </table>
        </div>
    </div>

    <div class="pull-right">
        <button class="btn btn-primary" type="submit">Confirmar</button>
        <a class="btn btn-default" href="{{ path('solicitud') }}">
            Volver
        </a>

    </div>

</form>
{%endblock%}
