{% extends 'ThemeBundle:Default:base.html.twig' %}
{% block contenido %}
{{ parent() }}
<h1>Listado de Campos</h1>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('campo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>
                <a class="btn btn-default" href="{{ path('campo_edit', { 'id': entity.id }) }}">
                    <span class="glyphicon glyphicon-edit"></span>
                </a>

            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="navigation text-center">
    {{ knp_pagination_render(entities) }}
</div>

<div class="pull-right">
<a class="btn btn-primary" href="{{ path('campo_new') }}">
    Crear Nuevo
</a>
</div>

{%endblock%}