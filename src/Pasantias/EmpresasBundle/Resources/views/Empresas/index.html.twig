{% extends 'ThemeBundle:Default:base.html.twig' %}
{% block head%}

{% endblock %}

{% block contenido %}
<h1>Listado de Empresas</h1>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Nro</th>
            <th>Nombre</th>
            <th>Persona contacto</th>
            <th>Tel</th>
            <th>Mail</th>
            {#<th>Paginaweb</th>#}
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
                    {#<td><a href="{{ path('empresas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
            <td>{{ loop.index }}</td>
            <td>{{ entity.nombreEmpresa }}</td>
            <td>{{ entity.personaContacto }}</td>
            <td>{{ entity.telContacto }}</td>
            <td>{{ entity.mailContacto }}</td>
                {#<td>{{ entity.paginaWeb }}</td>#}
            <td>
                <a class="btn btn-default" href="{{ path('empresas_edit', { 'id': entity.id }) }}">
                    <span class="glyphicon glyphicon-edit"></span>
                </a>   
                
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div class="navigation text-center">
    {{ knp_pagination_render(entities) }}
</div>

<div class="pull-right">
<a class="btn btn-primary" href="{{ path('empresas_new') }}">
    Crear Nuevo
</a>
</div>



{%endblock%}
