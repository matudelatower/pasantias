{% extends 'ThemeBundle:Default:base.html.twig' %}
{% block contenido %}
{{ parent() }}
<h1>Listado tipos de Trabajo</h1>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Id</th>
            <th>Descripcion</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</td>
            <td>{{ entity.descripcion }}</td>

            <td>
                <a class="btn btn-default" href="{{ path('tipo_trabajo_edit', { 'id': entity.id }) }}">
                    <span class="glyphicon glyphicon-edit"></span>
                </a>                                
            </td>

        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="navigation text-center">
    {{ knp_pagination_render(entities) }}
</div>

<div class="pull-right">
    <a class="btn btn-primary" href="{{ path('tipo_trabajo_new') }}">
        Crear Nuevo
    </a>
</div>

{%endblock%}