{% extends 'ThemeBundle:Default:base.html.twig' %}
{% block contenido %}
<h1>Listado de Usuarios</h1>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Id</th>            
            <th>Usuario</th>
            <th>Activo</th>
            <th>Correo</th>
            <th>Perfil</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</td>
            <td>{{ entity.usuario }}</td>
            <td>{%if entity.activo %}
                Si
                {%else%}
                No
                {%endif%}
            </td>            
            <td>{{ entity.mail }}</td>
            <td>{{ entity.perfil.nombrePerfil }}</td>
            <td>
                <a class="btn btn-default" href="{{ path('usuarios_edit', { 'id': entity.id }) }}">
                    <span class="glyphicon glyphicon-edit"></span>
                </a>

                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>

<div class="pull-right">
    <a class="btn btn-primary" href="{{ path('usuarios_new') }}">
        Crear Nuevo
    </a>
</div>
{%endblock%}