{% extends 'ThemeBundle:Default:base.html.twig' %}
{% block contenido %}
<h1>Listado de Curriculum</h1>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Id</th>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Fecha de carga</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</td>
            <td>{{ entity.persona.dni }}</td>
            <td>{{ entity.persona.nombre }}</td>
            <td>{{ entity.persona.apellido }}</td>
            <td>{% if entity.fecha %}{{ entity.fecha|date('d-m-Y') }}{% endif %}</td>
            <td>
                <a class="btn btn-default" href="{{ path('curriculum_show', { 'id': entity.id }) }}">
                    <span class="glyphicon glyphicon-eye-open"></span>
                </a>       
                <a class="btn btn-default" target="_blank" href="{{ path('curriculum_imprimir', { 'id': entity.id }) }}">
                    <span class="glyphicon glyphicon-print"></span>
                </a>  
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div class="navigation text-center">
    {{ knp_pagination_render(entities) }}
</div>
{%endblock%}